{
  "name": "@electron-flow/cli",
  "version": "0.0.1",
  "description": "electron-flowのコマンドラインインターフェース",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "electron-flow": "./dist/index.js"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "engines": {
    "node": ">=22.0.0"
  },
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "dev": "tsc --watch -p tsconfig.build.json",
    "clean": "rm -rf dist",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "prepublishOnly": "npm run clean && npm run build"
  },
  "dependencies": {
    "@electron-flow/code-generate": "file:../packages/codeGenerate",
    "chalk": "^5.4.1",
    "commander": "^12.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0"
  },
  "keywords": [
    "electron",
    "cli",
    "code-generation",
    "ipc",
    "typescript"
  ],
  "license": "UNLICENSE",
  "repository": {
    "type": "git",
    "url": "https://github.com/kuromiy/electron-flow.git",
    "directory": "cli"
  }
}
