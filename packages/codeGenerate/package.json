{
  "name": "@electron-flow/code-generate",
  "version": "0.0.1",
  "description": "TypeScript APIからElectron IPC通信コードを自動生成するコアモジュール",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "templates",
    "README.md"
  ],
  "engines": {
    "node": ">=22.0.0"
  },
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "dev": "tsc --watch -p tsconfig.build.json",
    "clean": "rm -rf dist",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "prepublishOnly": "npm run clean && npm run build"
  },
  "dependencies": {
    "typescript": "^5.0.0",
    "zod": "^3.22.0",
    "chokidar": "^3.5.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0"
  },
  "keywords": [
    "electron",
    "ipc",
    "typescript",
    "code-generation",
    "automation"
  ],
  "license": "UNLICENSE",
  "repository": {
    "type": "git",
    "url": "https://github.com/kuromiy/electron-flow.git",
    "directory": "packages/codeGenerate"
  }
}